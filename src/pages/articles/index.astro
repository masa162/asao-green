---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

// ── 記事メタ取得 ───────────────────────────
const articles = (await getCollection("articles")).sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// ── 各記事フォルダの 001.(jpg|png|jpeg) を静的 import ─
const thumbs = import.meta.glob(
  "../../content/articles/*/001.{jpg,jpeg,png}",
  { eager: true, import: "default" }
);
// slug → ImageMetadata の辞書を作成
const thumbBySlug = Object.fromEntries(
  Object.entries(thumbs).map(([path, mod]) => [
    path.split("/").at(-2), // フォルダ名が slug
    mod                     // ImageMetadata
  ])
);
---

<script type="module">
  const $ = (s) => document.querySelectorAll(s);
  document.getElementById("search")?.addEventListener("input", (e) => {
    const kw = e.target.value.toLowerCase();
    $(".article-card").forEach((c) =>
      c.style.display = c.innerText.toLowerCase().includes(kw) ? "block" : "none"
    );
  });
</script>

<BaseLayout
  title="麻生区の自然観察一覧 | あさおとみどり"
  description="あさおとみどりが厳選した麻生区の自然観察の一覧ページ。"
  image="/ogp.png"
  url="https://isuku.jp/articles"
  sideBarActiveItemID="articles"
>
  <section class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-6">🌿 観察記事一覧</h1>

    <div class="mb-8">
      <input
        id="search"
        type="text"
        placeholder="🔍 キーワードで検索（例：植物、麻生川）"
        class="input input-bordered w-full"
      />
    </div>

    {articles.length === 0 ? (
      <p class="text-gray-500 dark:text-gray-400">記事がまだありません。</p>
    ) : (
      <div class="space-y-6">
        {articles.map(({ slug, data }) => {
          let img = data.image;          // Front-matter 優先

          // ① Front-matter が相対パスなら、ハッシュ化済み 001.jpg を採用
          if (typeof img === "string" && !img.startsWith("/") && !img.startsWith("http")) {
            img = thumbBySlug[slug] ?? img; // ImageMetadata が有れば置き換え
          }

          // ② Front-matter が無ければ自動サムネ
          if (!img) img = thumbBySlug[slug];

          return (
            <div class="article-card">
              <HorizontalCard
                title={data.title}
                desc={data.description}
                img={img}
                url={`/articles/${slug}`}
                badge="あさおとみどり"
                tags={data.tags}
                pubDate={data.pubDate}
              />
            </div>
          );
        })}
      </div>
    )}
  </section>
</BaseLayout>
